    "paths": {
        "/api/stats/visit/{session}": {
            "patch": {
                "description": "Endpoint to extend the duration of an active visit session.",
                "tags": [
                    "stats"
                ],
                "summary": "Extend the visit session duration",
                "parameters": [
                    {
                        "description": "Session ID",
                        "name": "session",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessVisitExtendResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorVisitExtendResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/apps/create": {
