                "tags": [
                    "apps"
                ],
                "summary": "Delete an application",
                "parameters": [
                    {
                        "description": "Application ID",
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Example: {\\\"successfully\\\": true, \\\"app\\\": \\\"app_id\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAppResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Example: {\\\"error\\\": true, \\\"detail\\\": \\\"detailed error message\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAppResp"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/confirm": {
