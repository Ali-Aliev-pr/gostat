        "/auth/login": {
            "post": {
                "description": "Uses (login or email) and password for authentication to get access token",
                "tags": [
                    "authentication"
                ],
                "summary": "Authenticate a user and get access token",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/service.LoginRequest"
                            }
                        }
                    },
                    "description": "Login payload",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/password/request": {
            "post": {
                "description": "Sends a password reset email to the user.",
                "tags": [
                    "authentication"
                ],
                "summary": "Request Password Reset",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/service.ResetPasswordRequest"
                            }
                        }
                    },
                    "description": "Request body",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Password reset email sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthConfirmResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request body or an error occurred while sending the email",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/password/reset": {
            "post": {
                "description": "Resets the user's password using a secret token sent to their email.",
                "tags": [
                    "authentication"
                ],
                "summary": "Reset Password",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/service.ResetConfirmPasswordRequest"
                            }
                        }
                    },
                    "description": "Request body",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Password reset successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request body or an error occurred while resetting the password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/refresh": {
            "post": {
                "description": "Uses the refresh token to generate a new access token",
                "tags": [
                    "authentication"
                ],
                "summary": "Refresh the access token",
                "responses": {
                    "200": {
                        "description": "Example: {\\\"access_token\\\":\\\"your_new_generated_token\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Example: {\\\"error\\\":\\\"Invalid refresh token\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/registration": {
            "post": {
                "description": "Register a new user with the given details",
                "tags": [
                    "authentication"
                ],
                "summary": "Register a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/service.RegistrationRequest"
                            }
                        }
                    },
                    "description": "Registration payload",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Example: {\\\"token\\\":\\\"YOUR_GENERATED_TOKEN\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Example: {\\\"error\\\":\\\"any error\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Example: {\\\"error\\\":\\\"User with the same email already exists\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/token/revoke/{session}": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Accepts a session identifier in UUID format and revokes it to invalidate the session",
                "tags": [
                    "authentication"
                ],
                "summary": "Revoke a user's session token",
                "parameters": [
                    {
                        "description": "Session Identifier (UUID)",
                        "name": "session",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Example: {\\\"successful\\\":true}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessAuthConfirmResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Example: {\\\"error\\\":\\\"Unexpected error, failed to revoke token\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorAuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stats/get/visits": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieves visits data for a specific application",
                "tags": [
                    "stats"
                ],
                "summary": "Retrieve visits for an application",
                "parameters": [
                    {
                        "description": "Application ID",
                        "name": "app",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved data. The structure of the data depends on the application.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Example: {\\\"error\\\": true, \\\"detail\\\": \\\"Detailed error message\\\"}",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorGetVisitResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stats/set/visit/{app}": {
            "post": {
                "description": "Endpoint for registering a new visit or extending an existing session.",
                "tags": [
                    "stats"
                ],
                "summary": "Register a new visit or extend an existing session",
                "parameters": [
                    {
                        "description": "Application ID",
                        "name": "app",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/http.VisitData"
                            }
                        }
                    },
                    "description": "Visit Details",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.SuccessSetVisitResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/http.ErrorSetVisitResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "components": {
        "schemas": {
